
@{
    ViewBag.Title = "Control Panel | Pages";
}

<!--Blue Navigation Bar-->
<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Pages<small> Pages Management</small></h1>
            </div>
            <div class="col-md-2">
                <div class="dropdown create">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Create Content
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="@Url.Action("CreatePage", "AdminPanel")">Add Page</a></li>
                        <li><a href="@Url.Action("CreatePost", "AdminPanel")">Add Post</a></li>
                        <li><a href="@Url.Action("Index", "Permissions")">Edit Permissions</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container body-content">
    <!--Dashboard title [nothing special]-->
    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="active">Pages</li>
            </ol>
        </div>
    </section>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">

                    <!--Left Panel-->
                    <div class="list-group">
                        <a href="@Url.Action("Index", "AdminPanel")" class="list-group-item"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</a>
                        <a href="#" class="list-group-item active"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Pages</a>
                        <a href="@Url.Action("Posts", "AdminPanel")" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Posts</a>
                        <a href="@Url.Action("Index", "Users")" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users</a>
                    </div>

                    <!--Space & Bandwidth Usage-->
                    <div class="well">
                        <h4>Disk Space Used</h4>
                        <div class="progress">
                            <div class="progress-bar main-color-bg" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>
                        <h4>Bandwidth Used</h4>
                        <div class="progress">
                            <div class="progress-bar main-color-bg" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                                40%
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-9">

                    <!--Website Stats-->
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Pages</h3>
                        </div>
                        <div class="panel-body">

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

