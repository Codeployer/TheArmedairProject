@model IEnumerable<TheArmedairProject.Models.PostModels>

@{
    ViewBag.Title = "Control Panel | Posts";
}

<div class="container body-content">

    <!--Dashboard title [nothing special]-->
    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="active">Pages</li>
            </ol>
        </div>
    </section>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">

                    <!--Left Panel-->
                    <div class="list-group">
                        <a href="@Url.Action("Index", "AdminPanel")" class="list-group-item"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</a>
                        <a href="@Url.Action("Pages", "AdminPanel")" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Pages</a>
                        <a href="#" class="list-group-item active"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Posts</a>
                        <a href="@Url.Action("Index", "Users")" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users</a>
                    </div>

                    <!--Space & Bandwidth Usage-->
                    <div class="well">
                        <h4>Disk Space Used</h4>
                        <div class="progress">
                            <div class="progress-bar main-color-bg" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>
                        <h4>Bandwidth Used</h4>
                        <div class="progress">
                            <div class="progress-bar main-color-bg" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                                40%
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-9">

                    <!--Website Stats-->
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Posts</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row" style="margin-bottom: 15px;">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" placeholder="Filter Posts..." />
                                </div>
                            </div>

                    <!--Display Posts Info-->
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Published</th>
                            <th>Created</th>
                            <th>Options</th>
                        </tr>

                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author)
                            </td>
                            <td>
                                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReleaseDate)
                            </td>
                            <td>
                                <!--<input type="button" value="Edit" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Home")'" />-->
                                <a class="btn btn-default" href="#">Edit</a> 
                                <a class="btn btn-danger" href="#">Delete</a>
                            </td>
                       </tr>
                    }
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

