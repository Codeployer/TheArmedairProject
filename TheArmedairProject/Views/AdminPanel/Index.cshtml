@{
    ViewBag.Title = "Control Panel | Dashboard";
}
    <!--<script src="https://cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>-->

<!--Blue Navigation Bar-->
<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard<small> Manage Your Site</small></h1>
            </div>
            <div class="col-md-2">
                <div class="dropdown create">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Create Content
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="@Url.Action("CreatePage", "AdminPanel")">Add Page</a></li>
                        <li><a href="@Url.Action("CreatePost", "AdminPanel")">Add Post</a></li>
                        <li><a href="#">Edit Permissions</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container body-content">

    <!--Dashboard title [nothing special]-->
    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="active">Dashboard</li>
            </ol>
        </div>
    </section>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">

                    <!--Left Panel-->
                    <div class="list-group">
                        <a href="#" class="list-group-item active"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</a>
                        <a href="@Url.Action("Pages", "AdminPanel")" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Pages</a>
                        <a href="#" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Posts</a>
                        <a href="#" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users</a>
                    </div>

                    <!--Space & Bandwidth Usage-->
                    <div class="well">
                        <h4>Disk Space Used</h4>
                        <div class="progress">
                            <div class="progress-bar main-color-bg" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>
                        <h4>Bandwidth Used</h4>
                        <div class="progress">
                            <div class="progress-bar main-color-bg" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                                40%
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-9">

                    <!--Website Stats-->
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Website Overview</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span><br />203</h2>
                                    <h4>Users</h4>
                                </div>
                            </div>
                            <div class="col-md-3 dash-box">
                                <div class="well">
                                    <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span><br />12</h2>
                                    <h4>Posts</h4>
                                </div>
                            </div>
                            <div class="col-md-3 dash-box">
                                <div class="well">
                                    <h2><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><br />123</h2>
                                    <h4>Pages</h4>
                                </div>
                            </div>
                            <div class="col-md-3 dash-box">
                                <div class="well">
                                    <h2><span class="glyphicon glyphicon-stats" aria-hidden="true"></span><br />12,304</h2>
                                    <h4>Visitors</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--Latest Users-->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Panel title</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Joined</th>
                                </tr>
                                <tr>
                                    <td>Jill Smith</td>
                                    <td>jill@gmail.com</td>
                                    <td>Dec 12, 2016</td>
                                </tr>
                                <tr>
                                    <td>Mike Huzelnut</td>
                                    <td>noice@gmail.com</td>
                                    <td>Sep 5, 2012</td>
                                </tr>
                                <tr>
                                    <td>Mia North</td>
                                    <td>miamiu123@gmail.com</td>
                                    <td>Jan 03, 2010</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
