@model TheArmedairProject.Models.PostModels

@{
    ViewBag.Title = "Create New Post";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container body-content">
    <div class="container" align="center">
        <br /><h1 class="deep-shadow">Create New Post</h1><br />
        <hr />
        <div class="row">
            
            <!--Author-->
            <div class="col-md-4">
                <div class="input-group">
                    <h2>Author</h2>
                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                </div>
            </div>

            <!--Title-->
            <div class="col-md-4">
                <div class="input-group">
                    <h2>Title</h2>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <!--Release Date-->
            <div class="col-md-4">
                <div class="input-group">
                    <h2>Post Release Date</h2>
                    @Html.EditorFor(model => model.ReleaseDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReleaseDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br /><hr /><br />

        <!--Content-->
        <h2>Content</h2>
        @Html.TextAreaFor(model => model.Content, new { @class = "tinymce" })
        <br /><hr /><br />

        <!--Tags-->
        <h2>Tags</h2>
        <div class="alert alert-warning" style="text-align: left;">
            <strong>Work In Progress!</strong> "Tags" function will be realised up to 06.06.2017.
        </div>
        <hr /><br />

        <!--Finish-->
        <div class="row" style="margin-bottom: 15px; float: right;">
            <button type="button" class="btn btn-hot btn-lg" onclick="discard()">Discard</button>
            <button type="submit" value="Create" class="btn btn-fresh btn-lg">Save Changes</button>
        </div> 
    </div>
</div>
}

@section Scripts
{
    <script type="text/javascript" src="~/Scripts/tinymce/tinymce.js"></script>
    <script type="text/javascript" src="~/Scripts/tinymce/init-tinymce.js"></script>
}

